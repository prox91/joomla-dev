<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="SR_FIELD_ID_LABEL"
			description="SR_FIELD_ID_DESC"
			readonly="true" class="readonly" labelclass="control-label"/>

        <field name="username" type="text"
			class="inputbox"
			description="SR_FIELD_CUSTOMER_USERNAME_DESC"
			label="SR_FIELD_CUSTOMER_USERNAME"
			required="true"
			size="30" labelclass="control-label"
		/>

        <field name="customer_group_id" type="customergroup" class="inputbox"
			default="" size="60" label="SR_CUSTOMER_GROUP_ID_LABEL"
			description="SR_CUSTOMER_GROUP_ID_DESC" labelclass="control-label"/>

		<field name="customer_code" type="text" class="inputbox"
			default="" size="60" label="SR_CUSTOMER_CODE_LABEL"
			description="SR_CUSTOMER_CODE_DESC" required="true" labelclass="control-label"/>

        <field name="password" type="password"
			autocomplete="off"
			class="inputbox"
			description="SR_FIELD_CUSTOMER_PASSWORD_DESC"
			filter="raw"
			label="SR_FIELD_CUSTOMER_PASSWORD"
			size="30" labelclass="control-label"
		/>

        <field name="password2" type="password"
			autocomplete="off"
			class="inputbox"
			description="SR_FIELD_CUSTOMER_PASSWORD2_DESC"
			filter="raw"
			label="SR_FIELD_CUSTOMER_PASSWORD2"
			size="30" labelclass="control-label"
		/>

		<field name="firstname" type="text" default=""
			   class="inputbox"
			   required="true"
			   size="30"
			   label="SR_FIELD_CUSTOMER_FIRSTNAME_LABEL" description="SR_FIELD_CUSTOMER_FIRSTNAME_DESC" labelclass="control-label"/>

		<field name="middlename" type="text" default=""
			   class="inputbox"
			   size="30"
			   label="SR_FIELD_CUSTOMER_MIDDLENAME_LABEL" description="SR_FIELD_CUSTOMER_MIDDLENAME_DESC" 
			   labelclass="control-label"/>

		<field name="lastname" type="text" default=""
			   class="inputbox"
			   required="true"
			   size="30"
			   label="SR_FIELD_CUSTOMER_LASTNAME_LABEL" description="SR_FIELD_CUSTOMER_LASTNAME_DESC"
			   labelclass="control-label" />

        <field name="email" type="email"
			class="inputbox"
			description="SR_FIELD_CUSTOMER_EMAIL_DESC"
			label="SR_FIELD_CUSTOMER_EMAIL"
			required="true"
			size="30"
			validate="email"
			labelclass="control-label"
		/>

        <field name="groups" type="hidden" />
        <field name="user_id" type="hidden" />


	</fieldset>
</form>
