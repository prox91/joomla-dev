<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="SR_FIELD_ID_LABEL"
			description="SR_FIELD_ID_DESC"
			readonly="true" class="readonly" labelclass="control-label"/>
		
		<field name="name" type="text" class="inputbox"
			default="" size="60" label="SR_FIELD_STATE_NAME_LABEL"
			description="SR_FIELD_STATE_NAME_DESC" required="true" labelclass="control-label"/>

		<field name="country_id" type="country" require="true" label="SR_FIELD_COUNTRY_LABEL"
			description="SR_FIELD_COUNTRY_DESC" labelclass="control-label"/>

		<field name="code_2" type="text" class="inputbox"
			default="" size="60" label="SR_CODE_2_LABEL"
			description="SR_CODE_2_DESC" labelclass="control-label"/>
		
		<field name="code_3" type="text" class="inputbox"
			default="" size="60" label="SR_CODE_3_LABEL"
			description="SR_CODE_3_DESC" labelclass="control-label"/>
			
		<field name="state" type="list"
			label="SR_FIELD_STATE_LABLE" description="SR_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" labelclass="control-label"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASH</option>
		</field>	
			
	</fieldset>
	
	<!-- Add fields to the request variables for the layout. -->
</form>
