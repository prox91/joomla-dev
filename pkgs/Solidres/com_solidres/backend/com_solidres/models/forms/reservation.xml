<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="SR_FIELD_ID_LABEL"
			description="SR_FIELD_ID_DESC"
			readonly="true" class="readonly" labelclass="control-label"/>

		<field name="state" type="list"
			label="SR_FIELD_STATE_LABLE" description="SR_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" labelclass="control-label"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-1">PENDING</option>
		</field>
		
		<field name="arrival_date" type="text" label="SR_FIELD_RESERVATION_ARRIVAL_DATE_LABLE" class="arrival_date"
			description="SR_FIELD_RESERVATION_ARRIVAL_DATE_DESC" labelclass="control-label"/>
		
		<field name="departure_date" type="text" label="SR_FIELD_RESERVATION_DEPARTURE_DATE_LABLE" class="departure_date"
			description="SR_FIELD_RESERVATION_DEPARTURE_DATE_DESC" labelclass="control-label"/>
			
		<field name="number_of_night" type="text" label="SR_FIELD_RESERVATION_NUMBER_OF_NIGHT_LABLE"
			description="SR_FIELD_RESERVATION_NUMBER_OF_NIGHT_DESC" labelclass="control-label"/>

		<field name="customer_code" type="text" label="SR_FIELD_RESERVATION_CUSTOMER_REGISTER_LABEL"
			description="SR_FIELD_RESERVATION_CUSTOMER_REGISTER_DESC" class="inputbox" labelclass="control-label"/>
        
		<field name="payment_method_id" type="paymentmethod"
			label="SR_FIELD_RESERVATION_PAYMENT_METHOD_LABEL"
			description="SR_FIELD_RESERVATION_PAYMENT_METHOD_DESC" labelclass="control-label"/>
			
		<field name="note" type="editor" class="inputbox"
			label="SR_FIELD_DESCRIPTION_LABEL" description="SR_FIELD_ARTICLETEXT_DESC"
			filter="safehtml" buttons="false" width="71%" labelclass="control-label"/>
			
		<field name="coupon_code" type="text" label="SR_FIELD_RESERVATION_COUPON_LABEL"
			class="inputbox" description="SR_FIELD_RESERVATION_COUPON_DESC" labelclass="control-label"/>
			
		<field name="extra_id" type="extra" class="inputbox"
			default="" size="60" label="SR_FIELD_RESERVATION_EXTRA_LABEL"
			description="SR_FIELD_RESERVATION_EXTRA_DESC" labelclass="control-label"/>
		<field
			name="booking_details" type="hidden"
		/>
		
		<field
			name="room_type_id"
			type="hidden"
			 />

        <field
			name="coupon_id"
			type="hidden"
			 />
        <field
			name="room_id"
			type="hidden"
			 />
        <field
			name="customer_id"
			type="hidden"
			 />
			
	</fieldset>
</form>
