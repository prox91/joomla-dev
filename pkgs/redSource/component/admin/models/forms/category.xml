<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redsource/fields">
		<field
			name="id"
			type="hidden"
			default="0"
			label="COM_REDSOURCE_ID_LABEL"
			description="COM_REDSOURCE_ID_DESC"
			readonly="true"
		/>
		<field
			name="parent_id"
			type="rscategory"
			default="1"
			parent="true"
			label="COM_REDSOURCE_CATEGORY_PARENT"
			description="COM_REDSOURCE_CATEGORY_PARENT_DESC"
			required="false"
		/>
		<field
			name="lft"
			type="hidden"
			filter="unset"
		/>
		<field
			name="rgt"
			type="hidden"
			filter="unset"
		/>
		<field
			name="level"
			type="hidden"
			filter="unset"
		/>
		<field
			name="state"
			type="radio"
			label="COM_REDSOURCE_STATE_LABEL"
			description="COM_REDSOURCE_STATE_DESC"
			required="true"
			class="btn-group"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field
			name="name"
			type="text"
			label="COM_REDSOURCE_NAME"
			description="COM_REDSOURCE_NAME_DESC"
			required="true"
			size="40"
		/>
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="40"
		/>
		<field
			name="description"
			type="textarea"
			label="COM_REDSOURCE_DESCRIPTION"
			description="COM_REDSOURCE_DESCRIPTION_DESC"
		/>
		<field
			name="created_date"
			type="text"
			label="COM_REDSOURCE_CREATED_DATE_LABEL"
			readonly="true"
		/>
		<field
			name="created_by"
			type="ruser"
			label="COM_REDSOURCE_CREATED_BY_LABEL"
			readonly="true"
		/>
		<field
			name="modified_date"
			type="text"
			label="COM_REDSOURCE_MODIFIED_DATE_LABEL"
			readonly="true"
		/>
		<field
			name="modified_by"
			type="ruser"
			label="COM_REDSOURCE_MODIFIED_BY_LABEL"
			readonly="true"
		/>
		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>
		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="span12 small"
		/>
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_REDSOURCE_FIELD_CATEGORY_LANGUAGE_DESC"
			class="span12 small">
			<option value="*">JALL</option>
		</field>
	</fieldset>
</form>
