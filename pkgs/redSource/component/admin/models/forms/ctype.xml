<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redsource/form/fields">
		<field
			name="id"
			type="hidden"
			default="0"
			label="COM_REDSOURCE_ID_LABEL"
			description="COM_REDSOURCE_ID_DESC"
			readonly="true"
		/>
		<field
			name="state"
			type="radio"
			label="COM_REDSOURCE_STATE_LABEL"
			description="COM_REDSOURCE_STATE_DESC"
			required="true"
			class="btn-group"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field
			name="name"
			type="text"
			label="COM_REDSOURCE_NAME"
			description="COM_REDSOURCE_NAME_DESC"
			required="true"
		/>
		<field
			name="channels"
			type="channel"
			label="COM_REDSOURCE_CHANNELS"
			description="COM_REDSOURCE_CHANNELS_DESC"
			required="true"
			multiple="true"
		/>
		<field
			name="created_date"
			type="text"
			label="COM_REDSOURCE_CREATED_DATE_LABEL"
			readonly="true"
		/>
		<field
			name="created_by"
			type="user"
			label="COM_REDSOURCE_CREATED_BY_LABEL"
			readonly="true"
		/>
		<field
			name="modified_date"
			type="text"
			label="COM_REDSOURCE_MODIFIED_DATE_LABEL"
			readonly="true"
		/>
		<field
			name="modified_by"
			type="user"
			label="COM_REDSOURCE_MODIFIED_BY_LABEL"
			readonly="true"
		/>
		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>
		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
		<field addfieldpath="/administrator/components/com_redsource/models/fields"
			name="fields"
			label="Fields"
			type="layout"
			file="addfield"
		/>
	</fieldset>
</form>
