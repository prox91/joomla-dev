<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/libraries/redsource/fields">
	<fieldset name="basic">
		<field
			name="multiple"
			type="hidden"
			filter="unset"
		/>
	</fieldset>
	<fieldset name="type">
		<field
			name="size"
			type="text"
			label="COM_REDSOURCE_SIZE"
			xdescription="COM_REDSOURCE_SIZE_DESC"
		/>
		<field
			name="maxlength"
			type="text"
			label="COM_REDSOURCE_MAXLENGTH"
			xdescription="COM_REDSOURCE_MAXLENGTH_DESC"
		/>
		<field
			name="default"
			type="text"
			label="COM_REDSOURCE_DEFAULT"
			xdescription="COM_REDSOURCE_DEFAULT_DESC"
		/>
		<field
			name="readonly"
			type="radio"
			class="btn-group"
			default="0"
			label="COM_REDSOURCE_READONLY"
			xdescription="COM_REDSOURCE_READONLY_DESC"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="disabled"
			type="radio"
			class="btn-group"
			default="0"
			label="COM_REDSOURCE_DISABLED"
			xdescription="COM_REDSOURCE_DISABLED_DESC"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="filter"
			type="text"
			label="COM_REDSOURCE_FILTER"
			xdescription="COM_REDSOURCE_FILTER_DESC"
		/>
	 </fieldset>
</form>
