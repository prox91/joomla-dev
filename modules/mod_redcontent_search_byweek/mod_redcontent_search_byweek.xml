<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
	<name>redCONTENT Module Search by Week</name>
	<creationDate>09-04-2013</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>www.redcomponent.com</copyright>
	<license>GNU/GPL</license>
	<version>1.1</version>
	<description>redCONTENT Search Article by Week Module</description>
    <files>
        <filename>mod_redcontent_search_byweek.xml</filename>
		<folder>language</folder>
        <filename module="mod_redcontent_search_byweek">mod_redcontent_search_byweek.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
	<languages>
    	<language tag="en-GB">language/en-GB/en-GB.mod_redcontent_search_byweek.ini</language>
  	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field
                        name="category_id"
                        type="category"
                        default=""
                        multiple="true"
                        show_root = "true"
                        extension="com_content"
                        label="Select a category"
                        size = "20"
                        description="">
                </field>
			</fieldset>
		</fields>
	</config>
</extension>
