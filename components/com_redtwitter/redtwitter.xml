<?xml version="1.0" encoding="utf-8"?>
<extension type="component"
           version="2.5.x"
           method="upgrade">
	<name>com_redtwitter</name>
	<creationDate>2012-11-15</creationDate>
	<copyright>Copyright (C) 2012. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<author>Ronni K. G. Christiansen</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<version>1.0.0</version>
	<description></description>

	<installfile>install.redtwitter.php</installfile>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<files folder="site">
		<filename>index.html</filename>
		<filename>redtwitter.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>libs</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>language</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_redtwitter.ini
		</language>
	</languages>
	<administration>
		<menu img="components/com_redtwitter/assets/images/s_com_redtwitter.png">COM_REDTWITTER</menu>
		<submenu>

			<menu link="option=com_redtwitter&amp;view=oauth_infos"
			      view="oauth_infos"
			      img="components/com_redtwitter/assets/images/s_followed_profiles.png"
			      alt="Redtwitter/Followed_profiles">COM_REDTWITTER_TITLE_OAUTH_INFO_MANAGER</menu>

			<menu link="option=com_redtwitter&amp;view=followed_profiles"
			      view="followed_profiles"
			      img="components/com_redtwitter/assets/images/s_followed_profiles.png"
			      alt="Redtwitter/Followed_profiles">COM_REDTWITTER_TITLE_FOLLOWED_PROFILES</menu>

		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>redtwitter.php</filename>
			<folder>controllers</folder>
			<folder>assets</folder>
			<folder>language</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_redtwitter.ini
			</language>
			<language tag="en-GB">language/en-GB/en-GB.com_redtwitter.sys.ini
			</language>
		</languages>
	</administration>
</extension>