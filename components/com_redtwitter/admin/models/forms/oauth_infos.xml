<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
		       type="text"
		       default="0"
		       label="COM_REDTWITTER_FORM_LBL_OAUTH_INFO_ID"
		       readonly="true"
		       class="readonly"
		       description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="consumer_key"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_OAUTH_INFO_CONSUMER_KEY"
		       description="COM_REDTWITTER_FORM_DESC_OAUTH_INFO_CONSUMER_KEY"
		       required="true"
		       filter="safehtml"/>

		<field name="consumer_secret"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_OAUTH_INFO_CONSUMER_SECRET"
		       description="COM_REDTWITTER_FORM_DESC_OAUTH_INFO_CONSUMER_SECRET"
		       required="true"
		       filter="safehtml"/>

		<field name="access_token"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_OAUTH_INFO_ACCESS_TOKEN"
		       description="COM_REDTWITTER_FORM_DESC_OAUTH_INFO_ACCESS_TOKEN"
		       filter="safehtml"/>

		<field name="access_token_secret"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_OAUTH_INFO_ACCESS_TOKEN_SECRET"
		       description="COM_REDTWITTER_FORM_DESC_OAUTH_INFO_ACCESS_TOKEN_SECRET"
		       filter="safehtml"/>

		<field name="created_by"
		       type="createdby"
		       default=""
		       label="COM_REDTWITTER_FORM_LBL_OAUTH_INFO_CREATED_BY"
		       description="COM_REDTWITTER_FORM_DESC_OAUTH_INFO_CREATED_BY"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
</form>
