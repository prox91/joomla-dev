<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id"
		       type="hidden"
		       default="0"
		       label="COM_REDTWITTER_FORM_LBL_FOLLOWED_PROFILE_ID"
		       readonly="true"
		       class="readonly"
		       description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="name"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_FOLLOWED_PROFILE_NAME"
		       description="COM_REDTWITTER_FORM_DESC_FOLLOWED_PROFILE_NAME"
		       required="true"
		       filter="safehtml"/>

		<field name="twitterusername"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_FOLLOWED_PROFILE_TWITTERUSERNAME"
		       description="COM_REDTWITTER_FORM_DESC_FOLLOWED_PROFILE_TWITTERUSERNAME"
		       required="true"
		       filter="safehtml"/>

		<field name="twitterpassword"
		       type="text"
		       size="40"
		       class="inputbox"
		       label="COM_REDTWITTER_FORM_LBL_FOLLOWED_PROFILE_TWITTERPASSWORD"
		       description="COM_REDTWITTER_FORM_DESC_FOLLOWED_PROFILE_TWITTERPASSWORD"
		       filter="safehtml"/>

		<field name="created_by"
		       type="createdby"
		       default=""
		       label="COM_REDTWITTER_FORM_LBL_FOLLOWED_PROFILE_CREATED_BY"
		       description="COM_REDTWITTER_FORM_DESC_FOLLOWED_PROFILE_CREATED_BY"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out"
		       type="hidden"
		       filter="unset"/>
		<field name="checked_out_time"
		       type="hidden"
		       filter="unset"/>
	</fieldset>

</form>