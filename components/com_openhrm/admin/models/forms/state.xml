<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
		       type="text"
		       default="0"
		       label="ID"
		       description="ID"
		       readonly="true"
		       class="readonly"
		       labelclass="control-label"/>

		<field name="country_id"
		       type="countries"
		       class="inputbox"
		       description="Country name"
		       label="Country Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="name"
		       type="text"
		       class="inputbox"
		       label="State Name"
		       description="State Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="code"
		       type="text"
		       class="inputbox"
		       label="Code Name"
		       description="State Code Name"
		       size="30"
		       labelclass="control-label"/>

		<field name="published"
		       type="list"
		       class="inputbox"
		       label="State"
		       default="1"
		       description="State of Country"
		       filter="safehtml"
		       buttons="false"
		       width="90%"
		       labelclass="control-label">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
</form>
