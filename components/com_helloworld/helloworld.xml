<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.x" method="upgrade">
	<name>Hello World!</name>
	<creationDate>2013-04-01</creationDate>
	<copyright>Copyright (C) 2012. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<author>Nha Bui</author>
	<authorEmail>nha@redweb.dk</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<version>0.0.6</version>
	<description>The first component for development.</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 3.0 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>helloworld.php</filename>
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>Hello World!</menu>

		<files folder="admin">
			<filename>helloworld.php</filename>
			<filename>index.html</filename>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
		</files>
	</administration>
</extension>