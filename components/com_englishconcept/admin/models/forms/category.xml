<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
	    <field name="id"
	           type="text"
	           default="0"
	           label="ID"
	           description="ID"
	           readonly="true"
	           class="readonly"
	           labelclass="control-label"/>

        <field name="name"
               type="text"
               class="inputbox"
               label="Category name"
               description="Category name"
               size="30"
               required="true"
               labelclass="control-label"/>

        <field name="alias"
               type="text"
               class="inputbox"
               label="Alias name"
               description="Category Name Alias"
               size="30"
               required="true"
               labelclass="control-label"/>

        <field name="description"
               type="editor"
               class="inputbox"
               label="Description"
               description="Book introduction/Description"
               filter="safehtml" buttons="false" width="90%"
               labelclass="control-label"/>

        <field name="published"
               type="Publishes"
               class="inputbox"
               label="State"
               description="State of Category"
               filter="safehtml" buttons="false" width="90%"
               labelclass="control-label"/>

        <field name="groups"
               type="hidden"/>
    </fieldset>
</form>
