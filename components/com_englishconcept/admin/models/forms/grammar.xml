<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
		       type="text"
		       default="0"
		       label="ID"
		       description="ID"
		       readonly="true"
		       class="readonly"
		       labelclass="control-label"/>

		<field name="lesson_id"
		       type="lessons"
		       class="inputbox"
		       label="Lesson Name"
		       description="Lesson Name"
		       required="true"
		       labelclass="control-label"/>

		<field name="description"
		       type="editor"
		       class="inputbox"
		       label="Description"
		       description="Book introduction/Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<!-- Exercise tab-->
        <field name="grammar_id"
               type="text"
               class="readonly"
               readonly="true"
               label="Grammar ID"
               description="Grammar ID"
               required="true"
               labelclass="control-label"/>

        <field name="exercise_text"
               type="editor"
               class="inputbox"
               label="Exercise Text"
               description="Exercise Text"
               filter="safehtml" buttons="false" width="90%"
               labelclass="control-label"/>

		<!-- Question tab-->

		<field name="groups"
		       type="hidden"/>
	</fieldset>
</form>
