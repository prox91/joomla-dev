<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
		       type="text"
		       default="0"
		       label="ID"
		       description="ID"
		       readonly="true"
		       class="readonly"
		       labelclass="control-label"/>

		<field name="lesson_id"
		       type="lessons"
		       class="inputbox"
		       label="Lesson Name"
		       description="Lesson Name"
		       required="true"
		       labelclass="control-label"/>

		<field name="description"
		       type="editor"
		       class="inputbox"
		       label="Description"
		       description="Book introduction/Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<field name="question"
		       type="editor"
		       class="inputbox"
		       label="Question"
		       description="Book introduction/Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<field name="question_trans"
		       type="editor"
		       class="inputbox"
		       label="Question Translate"
		       description="Book introduction/Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<field name="groups"
		       type="hidden"/>
	</fieldset>
</form>
