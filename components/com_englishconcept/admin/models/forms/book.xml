<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="name"
		       type="text"
		       class="inputbox"
		       description="Book name"
		       label="Book Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="alias"
		       type="text"
		       class="inputbox"
		       label="Alias Name"
		       description="Book Name Alias"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="img_url"
		       type="text"
		       class="inputbox"
		       label="Cover Image"
		       description="Book Cover Image"
		       size="30"
		       labelclass="control-label"/>

		<field name="description"
		       type="editor"
		       class="inputbox"
		       label="Description"
		       description="Book introduction/Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<field name="groups"
		       type="hidden"/>
		<field name="bac"
		       type="hidden"/>

	</fieldset>
</form>
