<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="book_id"
		       type="books"
		       class="inputbox"
		       label="Book Name"
		       description="Book Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="cat_id"
		       type="categories"
		       class="inputbox"
		       label="Category Name"
		       description="Category Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="level_id"
		       type="levels"
		       class="inputbox"
		       label="Level Name"
		       description="Level Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="name"
		       type="text"
		       class="inputbox"
		       description="Lesson name"
		       label="Lesson Name"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="alias"
		       type="text"
		       class="inputbox"
		       label="Alias Name"
		       description="Lesson Name Alias"
		       size="30"
		       required="true"
		       labelclass="control-label"/>

		<field name="description"
		       type="editor"
		       class="inputbox"
		       label="Description"
		       description="Book introduction/Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<field name="groups"
		       type="hidden"/>
		<field name="bac"
		       type="hidden"/>

	</fieldset>
</form>
