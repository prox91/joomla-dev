<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
		       type="text"
		       default="0"
		       label="ID"
		       description="ID"
		       readonly="true"
		       class="readonly"
		       labelclass="control-label"/>

		<field name="setting_id1"
		       type="radio"
			   class="btn-group"
		       label="Setting ID 1"
		       description="Setting ID 1"
		       required="true"
		       labelclass="control-label"/>

		<field name="description"
		       type="editor"
		       class="inputbox"
		       label="Description"
		       description="Setting Description"
		       filter="safehtml" buttons="false" width="90%"
		       labelclass="control-label"/>

		<!-- Question tab-->

		<field name="groups"
		       type="hidden"/>
	</fieldset>
</form>
